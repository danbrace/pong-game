{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build sdl project",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",                                     // Include debugging information
                "-std=c11",                               // Use C11 standard (change to c99 if needed)
                "-I./sdl2/SDL2-2.28.2/x86_64-w64-mingw32/include",        // Include path to SDL headers (relative to workspace)
                "-L./sdl2/SDL2-2.28.2/x86_64-w64-mingw32/lib",            // Specify the path to the SDL library (relative to workspace)
                "-lSDL2",                                 // Link against the SDL2 library
                "main.c",                                  // Your main C source file
                "-o", "output.exe"                         // Output executable name (with .exe file extension for Windows)
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}